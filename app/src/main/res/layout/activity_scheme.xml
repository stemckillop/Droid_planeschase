<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/_s47"
        android:id="@+id/img_scheme"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/layout_scheme"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/layout_scheme"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:background="@color/colorPrimary"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="NextScheme">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/icon_archenemy"
                android:id="@+id/imageView6"
                android:layout_height="40dp" />

            <TextView
                android:text="Next Scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:padding="2dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>